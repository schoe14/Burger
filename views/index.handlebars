<div class="container fluid header my-3">
    <h1>Eat-Da-Burger!</h1>
</div>

<div class="container fluid burgersList my-3">
    <div class="row justify-content-center mx-0 my-3">
        <div class="col-sm-6 col-md-6 col-lg-5">
            {{!-- <h2>Burgers not devoured</h2> --}}

            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}

        </div>

        <div class="col-sm-6 col-md-6 col-lg-5 text-muted">
            {{!-- <h2>Burgers devoured</h2> --}}

            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}

        </div>
    </div>

    <div class="row d-flex justify-content-center m-0">
        <form class="create-form">

            <div class="form-group">
                {{!-- <label for="burger_name">Burger Name:</label> --}}
                <textarea id="burger_name" name="burger_name" rows="4" cols="50"></textarea>
                {{!-- <input type="text" id="burger_name" name="burger_name"> --}}
            </div>

            {{!-- <div class="form-group">
                <label for="devoured">Devour?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devour!<br>
                <input type="radio" name="devoured" value="0"> Not Devour!
            </div> --}}
            <button type="submit" class="btn btn-primary">Add <i class="fas fa-hamburger"></i></button>
            {{!-- <button type="submit">Add <i class="fas fa-hamburger"></i></button> --}}
            <div id="instruction">
                Enter a burger you want to eat and Click the "Add <i class="fas fa-hamburger"></i>" button
            </div>
        </form>
    </div>

</div>

