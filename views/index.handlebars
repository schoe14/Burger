<h1>Eat-Da-Burger!</h1>

<h2>Burgers not devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour!<br>
    <input type="radio" name="devoured" value="0"> Not Devour!
  </div>

  <button type="submit">Add Burger</button>
</form>
